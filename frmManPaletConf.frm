Private Function MontaSQLCarga(Index As Integer, enlaza As Boolean) As String
'--------------------------------------------------------------------
' MontaSQlCarga:
'   Basant-se en la informació proporcionada pel vector de camps
'   crea un SQl per a executar una consulta sobre la base de datos que els
'   torne.
' Si ENLAZA -> Enlaça en el data1
'           -> Si no el carreguem sense enllaçar a cap camp
'--------------------------------------------------------------------
Dim Sql As String
Dim Tabla As String
    
    ' ********* si n'hi han tabs, dona igual si en datagrid o no ***********
    Select Case Index
               
        Case 0 'ENVASES
            Sql = "SELECT confpale_envases.codpalet, confpale_envases.codartic, sartic.nomartic, "
            Sql = Sql & " confpale_envases.cantidad, "
            If vParamAplic.TipoPrecio = 0 Then
                Sql = Sql & "sartic.preciomp, round(confpale_envases.cantidad*sartic.preciomp,4) "
            Else
                Sql = Sql & "sartic.preciouc, round(confpale_envases.cantidad*sartic.preciouc,4) "
            End If
            
            Sql = Sql & ", confpale_envases.numlinea FROM confpale_envases, sartic "
            If enlaza Then
                Sql = Sql & ObtenerWhereCab(True)
            Else
                Sql = Sql & " WHERE confpale_envases.codpalet is null "
            End If
            Sql = Sql & " and confpale_envases.codartic = sartic.codartic"
            Sql = Sql & " ORDER BY confpale_envases.numlinea"
            
    End Select
    
    MontaSQLCarga = Sql
End Function

